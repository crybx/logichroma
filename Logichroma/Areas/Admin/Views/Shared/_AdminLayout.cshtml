<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Logichroma</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

<div class="navbar navbar-expand-md navbar-dark fixed-top bg-danger">
    <div class="container">
        @Html.ActionLink("Logichroma", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Games", "Index", "List", new {Area = "Game"}, new {@class = "nav-link"})
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Rules", "Rules", "Home", new {Area = ""}, new {@class = "nav-link"})
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", new {Area = ""}, new {@class = "nav-link"})
                </li>
                @if (User.IsInRole("canManageUsers"))
                {
                    <li class="nav-item">
                        @Html.ActionLink("Admin", "Index", "Dashboard", new {Area = "Admin"}, new {@class = "nav-link"})
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<br/>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Logichroma</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</body>
</html>
