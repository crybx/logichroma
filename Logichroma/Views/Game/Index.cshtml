@using Logichroma.Models.BusinessObjects;
@model List<GameModel>
@{
    ViewBag.Title = "Logichroma";
}

<h2>Games</h2>

<div>
    @foreach (var game in Model)
    {
        <div>
            @game.Id - @game.Name - Game @game.Status - @game.GamePlayers.Count Players - 
            @Html.ActionLink("Details", "Details", "Game", new { gameId = game.Id }, null)
        </div>
    }
</div>
