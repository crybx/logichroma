@model Logichroma.Models.GameDetailsViewModel
@{
    ViewBag.Title = "Logichroma";
}

<h2>@Model.Game.Name</h2>

<div>
    <label>@Model.Game.GamePlayers.Count/5 players joined so far.</label>
</div>

<div>
    <label>Players:</label>
    <ul>
        @foreach (var player in Model.Game.GamePlayers)
        {
            <li>@(player.Nickname ?? player.UserName)</li>
        }
    </ul>
</div>

@if (Model.CurrentPlayer == null && Model.PlayerCount < 5)
{
    using (Html.BeginForm("Join", "Game"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Game.Id);
        <div class="form-horizontal">
            <h3>Join This Game</h3>
            <div class="form-group">
                @Html.LabelFor(model => model.PlayerNickname, "Choose Your Nickname:", new { @class = "col-xs-12" })
                <div class="col-xs-12">
                    @Html.EditorFor(model => model.PlayerNickname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlayerNickname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Join Game" class="btn btn-default"/>
                </div>
            </div>
        </div>
    }
}

@if (Model.CurrentPlayer != null && Model.CurrentPlayer.IsGameOwner && Model.PlayerCount > 1)
{
    //TODO: Show a button for getting the game started.
    <div>START GAME</div>
}

<h3>The order of the deck is:</h3>
<div class="deck">
    @foreach (var card in Model.Game.GameCards)
    {
        <div class="card" style="background-color: @card.BackgroundColor;">
            <div class="card-container">
                <p style="color: @card.TextColor">
                    @card.CardTypeFaceValue
                </p>
            </div>
        </div>
    }
</div>
<div class="clear"></div>
